{
  "name": "super-dingbot",
  "version": "1.0.0",
  "description": "一个好用的钉钉机器人 Node.js 库（含 CLI）",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "release": "semantic-release",
    "prepare": "husky install",
    "format": "prettier --write src/**/* && eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoyuScript/super-dingbot.git"
  },
  "lint-staged": {
    "src/**/*": [
      "prettier --write",
      "eslint"
    ]
  },
  "keywords": [
    "dingtalk",
    "bot",
    "cli",
    "backend",
    "robot"
  ],
  "bin": {
    "dingbot": "dist/cli.js"
  },
  "author": "MoyuScript <i@moyu.moe>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MoyuScript/super-dingbot/issues"
  },
  "homepage": "https://github.com/MoyuScript/super-dingbot#readme",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "commander": "^9.1.0",
    "got": "^12.0.3",
    "joi": "^17.6.0"
  }
}
